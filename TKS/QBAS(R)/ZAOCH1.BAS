CLS
DIM n(50)
PRINT "Введите число,относительно которого нужно пропорционально "
PRINT "                    распределить  члены ряда"
INPUT B
INPUT "Введите количество членов в ряду: ", m

'Ввод всех членов ряда и нахождение их суммы(их сумма равна B)

FOR i = 1 TO m
  PRINT "Введите "; i; "-й член ряда: ";
  INPUT n(i)
  A = A + n(i)
NEXT i

'Нахождение коэффициента пропорциональности

k = B / A

'Нахождение нового ряда чисел

PRINT "       Члены нового ряда"
PRINT
FOR i = 1 TO m
  PRINT i; ".", k * n(i)
NEXT

'Проверка

FOR i = 1 TO m
  S = S + k * n(i)
NEXT
PRINT "Проверка:"; "  "; "сумма нового ряда равна: "; S

